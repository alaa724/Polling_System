
@model SignUpViewModel

@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_authLayout.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<div asp-validation-summary="ModelOnly"></div>
		<form asp-action="SignUp">
			<input class="text styles" asp-for="UserName" placeholder="Username" required="">
			<input class="text styles" asp-for="FirstName" placeholder="FirstName" required="">
			<input class="text styles" asp-for="LastName" placeholder="LastName" required="">
			<input class="text email" asp-for="Email" placeholder="Email" required="">
			<input class="text" asp-for="Password" placeholder="Password" required="">
			<input class="text w3lpass" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">
			<div class="wthree-text">
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNUP">
		</form>
		<p>have an Account? <a asp-action="SignIn"> Login Now!</a></p>
	</div>
</div>

@section ValidationScriptsSection {

	<partial name="_ValidationScriptsPartial" />

}

