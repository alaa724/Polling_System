@model UserPollViewModel

<h2>@Model.PollTitle</h2>

<form asp-action="SubmitPollAnswers" method="post">
    <input type="hidden" asp-for="Id" />
    @for (int i = 0; i < Model.Questions.Count; i++)
    {
        <div>
            <h4>@Model.Questions[i].QuestionText</h4>
            @for (int j = 0; j < Model.Questions[i].Answers.Count; j++)
            {
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="Questions[i].Answers[j].IsSelected" value="true" />
                    <label class="form-check-label" asp-for="Questions[i].Answers[j].IsSelected">@Model.Questions[i].Answers[j].AnswerText</label>
                    <input type="hidden" asp-for="Questions[i].Answers[j].AnswerId" />
                </div>
            }
        </div>
    }
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
