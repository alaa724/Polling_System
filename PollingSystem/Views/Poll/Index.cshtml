@model IEnumerable<Poll>

<h2>Polls</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Poll</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var poll in Model)
        {
            <tr>
                <td>@poll.Id</td>
                <td>@poll.Title</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@poll.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@poll.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
